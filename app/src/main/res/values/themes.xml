<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileAppPanda" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Base.Theme.MobileAppPanda.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.MobileAppPanda.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.MobileAppPanda.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="menu_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MobileAppPanda.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorControlNormal">@color/white</item>
    </style>
</resources>