<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="@color/primary"
    android:theme="@style/Theme.MobileAppPanda"
    android:id="@+id/idRegistration">

    <androidx.cardview.widget.CardView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="100sp"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="7sp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/regText1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="@color/black"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text2Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@color/secondary"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/textField"
                android:layout_marginHorizontal="20sp">

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:ems="10"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textInField"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hintText2"
                    android:background="@null"
                    android:autofillHints="" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text3Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/textField"
                android:layout_marginHorizontal="20sp"
                android:layout_marginBottom="10sp">

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:ems="10"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textInField"
                    android:inputType="textPassword"
                    android:hint="@string/hintText3"
                    android:background="@null"
                    android:autofillHints="" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="20sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/regText2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text4Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/textField"
                android:layout_marginHorizontal="20sp">

                <EditText
                    android:id="@+id/editTextTextPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:ems="10"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textInField"
                    android:inputType="textPassword"
                    android:hint="@string/hintText3"
                    android:background="@null"
                    android:autofillHints="" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnRegistrationApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/regBtnEnter"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="30sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40sp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textViewLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="30sp"
                android:layout_gravity="center"
                android:text="@string/regTextViewReg"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>