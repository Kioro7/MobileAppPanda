<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="@color/primary"
    android:id="@+id/container">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="40sp"
        android:src="@drawable/panda"
        app:civ_border_color="#00000000"
        app:civ_border_width="5dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="230sp"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="7sp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/text1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="30sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text2Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:background="@color/secondary"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/textField"
                android:layout_marginHorizontal="30sp">

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:ems="10"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textInField"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hintText2"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="30sp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/text3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text3Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/textField"
                android:layout_marginHorizontal="30sp">

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:ems="10"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/textInField"
                    android:inputType="textPassword"
                    android:hint="@string/hintText3"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEnter"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="50sp"
                android:layout_marginHorizontal="90sp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="30sp"
                android:text="@string/textViewReg"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>