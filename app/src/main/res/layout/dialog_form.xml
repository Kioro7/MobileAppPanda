<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idDialogForm">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MobileAppPanda">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/secondary"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8sp"
                    android:text="@string/form_title"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameField1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="25sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text21"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etNameField1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text23"
                                android:inputType="textEmailAddress"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameField2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text31"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etNameField2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text33"
                                android:inputType="textEmailAddress"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameField3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text41"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etNameField3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text43"
                                android:inputType="textEmailAddress"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ageField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text51"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etAgeField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text53"
                                android:inputType="textEmailAddress"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/telephoneField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text61"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etTelephoneField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text63"
                                android:inputType="phone"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emailField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/profile_text71"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30sp"
                            android:layout_marginTop="10sp"
                            android:background="@color/secondary"
                            app:cardBackgroundColor="@color/textField"
                            app:cardCornerRadius="10sp">

                            <EditText
                                android:id="@+id/etEmailField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="@string/profile_text73"
                                android:inputType="textEmailAddress"
                                android:padding="8sp"
                                android:textColor="@color/textInField"
                                android:textSize="18sp"
                                android:autofillHints="" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_save_user_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30sp"
                        android:layout_marginVertical="30sp"
                        android:background="@drawable/btn_radius"
                        android:text="@string/dialog_form_btn_save"
                        android:textColor="@color/white"
                        android:textSize="16sp">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>